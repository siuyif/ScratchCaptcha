<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context="com.siuyifypcaptcha.scratchcaptcha.MainActivity">

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/scratchView1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/scratchView1"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/Elephant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elephant"
            />

        <RadioButton
            android:id="@+id/Bear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bear" />

        <RadioButton
            android:id="@+id/KolaBear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kola Bear" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:id="@+id/button"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
